{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./share",
      "strict": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "strictNullChecks": true
    },
    "include": ["share"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }
